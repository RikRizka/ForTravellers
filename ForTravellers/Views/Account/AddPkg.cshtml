@{
    ViewBag.Title = "AddPkg";
    Layout = "_LoginPartial";
}

<h2>Add Package</h2>

<div class="col-lg-6">
    @using (Html.BeginForm("AddPkg", "Admin", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        <h2>Package name</h2>
        <select name="Offers" class="form-control" style="outline:none; width: 90%; padding: .9em 1em; margin-top:10px; letter-spacing: 2px; font-size: 16px; color:#888; border:none; border:1px solid #bbb;border-left: 4px solid #bbb; background:none;border-radius:3px">
            <option>--Select Offer--</option>
            <option>Bronze Offer</option>
            <option>Silver Offer</option>
            <option>Premium Offer</option>
            <option>Diamond Offer</option>
            <option>Platinum</option>
            <option>Gold</option>
            <option>Platinum</option>
        </select>

        <!-- File input untuk gambar package -->
        <input type="file" name="image" class="form-control mt-3" style="outline:none; width: 90%; padding: .9em 1em; letter-spacing: 2px; font-size: 16px; color:#888; border:none; border:1px solid #bbb;border-left: 4px solid #bbb; background:none;border-radius:3px" />

        <!-- Textarea untuk deskripsi package -->
        @Html.TextAreaFor(x => x.Description, new { @class = "form-control mt-3", style = "outline:none; width: 90%; padding: .9em 1em; letter-spacing: 2px; font-size: 16px; color:#888; border:none; border:1px solid #bbb;border-left: 4px solid #bbb; background:none;border-radius:3px" })

        <!-- Submit button -->
        <input type="submit" value="Add Package" class="btn btn-danger mt-3" />

        <!-- Menampilkan pesan dari ViewBag -->
        <h3>@ViewBag.p</h3>
    }
</div>
